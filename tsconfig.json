{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES5",
    "lib": [ "es6", "dom" ],
    "sourceMap": true,
    "jsx": "react",
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}